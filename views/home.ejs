<html>
  <head>
    <title>Welfare Board |</title>
    <link rel="stylesheet" href="./css/style2.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />

    <style></style>
  </head>
  <body>
    <div class="header">
      <span class="logo">
        <a href="https://www.iitg.ac.in"
          ><img src="./images/iit_logo.png" alt="1200px-IIT-Guwahati-Logo-1"
        /></a>
      </span>
      <span class="title">
        <h5 class="text-sm">INDIAN INSTITUTE OF TECHNOLOGY GUWAHATI</h5>
      </span>
    </div>

    <!-- Top NavBar -->
    <nav>
      <ul class="topNav">
        <LI
          ><a href="#WB"><H5 class="welfare">WELFARE BOARD</H5></a></LI
        >
        <li><a href="#SA">STUDENT AFFAIRS BOARD</a></li>
        <LI><a href="#HAB">HOSTEL AFFAIRS BOARD</a></LI>
        <LI><a href="#TECH">TECHNICAL BOARD</a></LI>
        <LI><a href="#CB">CULTURAL BOARD</a></LI>
        <LI><a href="#SB">SPORTS BOARD</a></LI>
      </ul>
    </nav>

    <div class="slideshow-container">
      <div class="mySlides1">
        <img src="./images/img_nature_wide.jpg" style="width: 100%" />
      </div>

      <div class="mySlides1">
        <img src="./images/img_snow_wide.jpg" style="width: 100%" />
      </div>

      <div class="mySlides1">
        <img src="./images/img_mountains_wide.jpg" style="width: 100%" />
      </div>

      <a class="prev" onclick="plusSlides(-1, 0)">&#10094;</a>
      <a class="next" onclick="plusSlides(1, 0)">&#10095;</a>
    </div>

    <!-- Bottom NavBar -->

    <nav class="navbar navbar-expand-lg">
      <div class="bottomNav">
        <div class="container-fluid">
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" id="home" href="#">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Sathi-Counselling Service</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Red Ribbon Club</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Academic Intiative Club</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Social Service Club</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Youth Empowerment Club</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Rights & Responsibility Club</a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </nav>

    <!-- Side NavBar -->
    <div class="middle">
      <div class="col-md-2">
        <ul class="nav flex-column list2">
          <li class="nav-item list">
            <h4
              class="nav-link text-secondary"
              aria-current="page"
              id="contentHead"
            >
              Contents
            </h4>
          </li>
          <li class="nav-item list">
            <a
              class="nav-link text-secondary"
              aria-current="page"
              href="#welfareBoardHeading"
              >About
            </a>
          </li>
          <li class="nav-item list">
            <a class="nav-link text-secondary" href="#announcement"
              >Announcements</a
            >
          </li>
          <li class="nav-item list">
            <a class="nav-link text-secondary" href="#achievements"
              >Achievements</a
            >
          </li>

          <li class="nav-item list">
            <a class="nav-link text-secondary" href="#">Events</a>
          </li>
        </ul>
      </div>
    </div>

    <script>
      var slideIndex = [1, 1];
      var slideId = ["mySlides1", "mySlides2"];
      showSlides(1, 0);

      function plusSlides(n, no) {
        showSlides((slideIndex[no] += n), no);
      }

      function showSlides(n, no) {
        var i;
        var x = document.getElementsByClassName(slideId[no]);
        if (n > x.length) {
          slideIndex[no] = 1;
        }
        if (n < 1) {
          slideIndex[no] = x.length;
        }
        for (i = 0; i < x.length; i++) {
          x[i].style.display = "none";
        }
        x[slideIndex[no] - 1].style.display = "block";
      }
    </script>

    <div class="welcome">
      <H1 id="welfareBoardHeading">Welcome to Welfare Board, IIT Guwahati</H1>
      <div class="aboutWelfare">
        <h3 id="about">About</h3>
        <p><%=about.body%></p>
      </div>
      <div class="ourVision">
        <h3 id="vision">Vision</h3>
        <P><%=vision.body%></P>
      </div>
    </div>

    <!-- Announcements -->
    <div class="announcements">
      <div class="announce">
        <h3 id="announcement">Announcements</h3>
        <div class="dropdown">
          <button
            class="btn shadow-sm btn-light dropdown-toggle"
            type="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            IMPORTANT
          </button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
            <li><a class="dropdown-item" href=" ">1</a></li>
            <li><a class="dropdown-item" href=" ">2</a></li>
            <li><a class="dropdown-item" href=" ">3</a></li>
          </ul>
        </div>
      </div>

      <% var
      month=["January","February","March","April","May","June","July","August","September","October","November","December"]
      %> <% announcements.slice(0,5).forEach(announcement=>{%>
      <div class="boxes">
        <div class="box shadow p-3 mb-3 bg-body rounded">
          <p class="date">
            <%= announcement.creation.getDate() %>
            <%=month[announcement.creation.getMonth()-1]%>
            <%=announcement.creation.getFullYear() %>
          </p>
          <div class="info">
            <p class="content"><%=announcement.description%></p>
            <a href="<%=announcement.link %> "
              ><svg
                width="32"
                height="33"
                viewBox="0 0 32 33"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  fill-rule="evenodd"
                  clip-rule="evenodd"
                  d="M21.4394 29.3923H10.546C5.83935 29.3923 2.66602 26.3643 2.66602 21.8456V10.2856C2.66602 5.76559 5.83935 2.72559 10.546 2.72559H21.4394C26.1593 2.72559 29.3327 5.76559 29.3327 10.2856V21.8456C29.3327 26.3643 26.1593 29.3923 21.4394 29.3923ZM19.026 15.0589H10.5593C9.99932 15.0589 9.55932 15.5123 9.55932 16.0589C9.55932 16.6189 9.99932 17.0589 10.5593 17.0589H19.026L15.7193 20.3523C15.5327 20.5389 15.426 20.8056 15.426 21.0589C15.426 21.3109 15.5327 21.5656 15.7193 21.7656C16.106 22.1523 16.746 22.1523 17.1327 21.7656L22.1593 16.7656C22.5327 16.3923 22.5327 15.7256 22.1593 15.3523L17.1327 10.3523C16.746 9.96559 16.106 9.96559 15.7193 10.3523C15.3327 10.7523 15.3327 11.3789 15.7193 11.7789L19.026 15.0589Z"
                  fill="#A5ADBC"
                /></svg>
            </a>
          </div>
        </div>
      </div>
      <% }) %>
    </div>

    <!-- Achievements -->

    <div class="achievements mt-5 w-50 d-flex flex-column">
      <div class="ach-start d-flex justify-content-between">
        <h3 id="achievements">Student Achievements</h3>
        <div class="dropdown">
          <button
            class="btn shadow-sm btn-light dropdown-toggle"
            type="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            2021
          </button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
            <li><a class="dropdown-item" href=" ">2020</a></li>
            <li><a class="dropdown-item" href=" ">2019</a></li>
            <li><a class="dropdown-item" href=" ">2018</a></li>
          </ul>
        </div>
      </div>
      <%achievements.slice(0,5).forEach(achievement=>{ %>
      <div class="cards_right ms-5">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= achievement.title %></h5>
            <p class="card-text"><%= achievement.HTMLString%></p>
            <div class="read_more d-flex justify-content-end">
              <span class="me-1">Read more</span>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                x="0px"
                y="0px"
                width="25"
                height="25"
                viewBox="0 0 172 172"
                style="fill: #000000"
              >
                <g
                  fill="none"
                  fill-rule="nonzero"
                  stroke="none"
                  stroke-width="1"
                  stroke-linecap="butt"
                  stroke-linejoin="miter"
                  stroke-miterlimit="10"
                  stroke-dasharray=""
                  stroke-dashoffset="0"
                  font-family="none"
                  font-weight="none"
                  font-size="none"
                  text-anchor="none"
                  style="mix-blend-mode: normal"
                >
                  <path d="M0,172v-172h172v172z" fill="none"></path>
                  <g fill="#2b3649">
                    <path
                      d="M86,17.2c-37.9948,0 -68.8,30.8052 -68.8,68.8c0,37.9948 30.8052,68.8 68.8,68.8c37.9948,0 68.8,-30.8052 68.8,-68.8c0,-37.9948 -30.8052,-68.8 -68.8,-68.8zM118.72013,90.05347l-22.93333,22.93333c-1.118,1.118 -2.58573,1.67987 -4.05347,1.67987c-1.46773,0 -2.93547,-0.56187 -4.05347,-1.67987c-2.24173,-2.24173 -2.24173,-5.8652 0,-8.10693l13.14653,-13.14653h-43.49307c-3.1648,0 -5.73333,-2.5628 -5.73333,-5.73333c0,-3.17053 2.56853,-5.73333 5.73333,-5.73333h43.49307l-13.14653,-13.14653c-2.24173,-2.24173 -2.24173,-5.8652 0,-8.10693c2.24173,-2.24173 5.8652,-2.24173 8.10693,0l22.93333,22.93333c2.24173,2.24173 2.24173,5.8652 0,8.10693z"
                    ></path>
                  </g>
                </g>
              </svg>
            </div>
          </div>
        </div>
      </div>
      <% }); %>
    </div>

    <!-- Events -->
    <div class="events">
      <div class="event">
        <h3 class="ehead">Events at IIT Guwahati</h3>
        <div class="dropdown">
          <button
            class="btn shadow-sm btn-light dropdown-toggle"
            type="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            ALL
          </button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
            <li><a class="dropdown-item" href="#">ALL</a></li>
            <li><a class="dropdown-item" href="#">CULTURAL</a></li>
            <li><a class="dropdown-item" href="#">TECHNICAL</a></li>
          </ul>
        </div>
      </div>

      <div class="ecards">
        <% var
        month=["January","February","March","April","May","June","July","August","September","October","November","December"]
        %> <%events.slice(0,3).forEach(event=>{ %>
        <div class="card text-white bg-primary mb-3" style="width: 19rem">
          <img src="<%= event.image %>" class="card-img-top h-75" />
          <div class="card-body">
            <p class="card-text">
              <%= event.creation.getDate() %>
              <%=month[event.creation.getMonth()-1]%>
              <%=event.creation.getFullYear() %>
            </p>
            <div class="einfo">
              <h6 class="card-title"><%= event.description %></h6>
              <a href="<%= event.link %>"
                ><svg
                  width="27"
                  height="27"
                  viewBox="0 0 27 27"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    fill-rule="evenodd"
                    clip-rule="evenodd"
                    d="M18.8769 26.8151H7.98352C3.27685 26.8151 0.103516 23.7871 0.103516 19.2684V7.70844C0.103516 3.18844 3.27685 0.148438 7.98352 0.148438H18.8769C23.5968 0.148438 26.7702 3.18844 26.7702 7.70844V19.2684C26.7702 23.7871 23.5968 26.8151 18.8769 26.8151ZM16.4635 12.4818H7.99682C7.43682 12.4818 6.99682 12.9351 6.99682 13.4818C6.99682 14.0418 7.43682 14.4818 7.99682 14.4818H16.4635L13.1568 17.7751C12.9702 17.9618 12.8635 18.2284 12.8635 18.4818C12.8635 18.7338 12.9702 18.9884 13.1568 19.1884C13.5435 19.5751 14.1835 19.5751 14.5702 19.1884L19.5968 14.1884C19.9702 13.8151 19.9702 13.1484 19.5968 12.7751L14.5702 7.7751C14.1835 7.38844 13.5435 7.38844 13.1568 7.7751C12.7702 8.1751 12.7702 8.80177 13.1568 9.20177L16.4635 12.4818Z"
                    fill="white"
                  />
                </svg>
              </a>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
